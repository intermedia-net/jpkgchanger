.DEFAULT_GOAL := help
.PHONY: deps publish publish_test tox help

deps:  ## Install dependencies
	python -m pip install --upgrade pip
	python -m pip install flit tox tox-gh-actions

publish:  ## Publish to PyPi
	python -m flit publish --repository pypi

publish_test:  ## Publish to Test PyPi
	python -m flit publish --repository pypitest

tox:   ## Run lint, static-check and test with coverage
	python -m tox

help: ## Show help message
	@IFS=$$'\n' ; \
	help_lines=(`fgrep -h "##" $(MAKEFILE_LIST) | fgrep -v fgrep | sed -e 's/\\$$//' | sed -e 's/##/:/'`); \
	printf "%s\n\n" "Usage: make [task]"; \
	printf "%-20s %s\n" "task" "help" ; \
	printf "%-20s %s\n" "------" "----" ; \
	for help_line in $${help_lines[@]}; do \
		IFS=$$':' ; \
		help_split=($$help_line) ; \
		help_command=`echo $${help_split[0]} | sed -e 's/^ *//' -e 's/ *$$//'` ; \
		help_info=`echo $${help_split[2]} | sed -e 's/^ *//' -e 's/ *$$//'` ; \
		printf '\033[36m'; \
		printf "%-20s %s" $$help_command ; \
		printf '\033[0m'; \
		printf "%s\n" $$help_info; \
	done